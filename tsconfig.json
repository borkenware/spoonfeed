{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true, 
    "strictPropertyInitialization": true,
  
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowJs": false,

    "lib": [ "es2020.string", "es2020.bigint" ],
    "baseUrl": "src",
    "paths": {
      "@markdown/*": [ "markdown/*" ],
      "@bundler/*": [ "bundler/*" ],
      "@config/*": [ "config/*" ],
      "@t/*": [ "types/*" ]
    },

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [ "src/**/*" ]
}
